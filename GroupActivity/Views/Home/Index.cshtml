@using GroupAct.Models;

@model List<StudentModel>

@{
    ViewBag.Title = "Home Page";
}
<div>
    <br />
    <br />
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        @Html.TextBox("SearchBox") <input type="submit">     
    }

    <br />
    <br />
    <table class="table">
        <tr>
           
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Address
            </th>
            <th>
                Section Name
            </th>
        </tr>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var student in Model)
            {
    <tr>
        <td>
            @student.FirstName
        </td>
        <td>
            @student.LastName
        </td>
        <td>
            @student.Address
        </td>
        <td>
            @student.SectionName.SectionName
        </td>
        <td>
            @Html.ActionLink("Update", "Update", new { studentID = @student.StudentID }) | @Html.ActionLink("Delete", "Delete", new { studentID = @student.StudentID })
        </td>
    </tr>
            }
        }
    </table>

</div>