<style>
    .cont {
        width: 500px;
        height: 380px;
        align-content: center;
        box-shadow: 3px 5px 9px grey;
        margin-top:6%;
        margin-left:30%;
        text-align:center;
        padding:3%;
        padding-left:9%;
        padding-right:9%;
        border-radius:18px;     
    }
    .button {
        width: 70px;
        height: 30px;
        background: linear-gradient(90deg, rgba(117,12,129,1) 35%, rgba(215,4,193,1) 100%);
        border: none;
        color: white;
        border-radius: 18px;
    }
    
</style>


    @using (Html.BeginForm("StudentLogin", "Home", FormMethod.Post))
    {
<div class="cont">
    <h2>Student Login</h2><br />
    @Html.TextBox("Username", "", new { @class = "form-control" , placeholder = "Enter a Username" })
    <br /> @Html.TextBox("Password", "", new { @class = "form-control" , placeholder = "Enter a Password" })
    <br /> <br />
    <input type="submit" value="Login" class="button" />
</div>
            }
        
